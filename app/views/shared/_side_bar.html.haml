.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name  
        = current_user.name
      %ul.side-header__box__manu
        %li.side-header__box__new-group
          = link_to new_group_path, class: "side-header__box__manu side-header__box__new-group" do
            = icon("fas","edit")
        %li.side-header__box__edit-user
          = link_to edit_user_path(current_user) do
            = icon("fas","cog", class: 'icon')

  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group),class:"group"do
        .group
          %p.group__group-name
            = group.name
          %p.group__latest-message
            = group.show_last_message
    